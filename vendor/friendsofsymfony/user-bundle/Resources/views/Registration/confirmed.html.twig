{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="container" id="registration-confirm">
        <div class="col-md-12">
            <div class="col-md-4" style="margin-top: 30px">
                <img src="{{ asset('Base/img/logo.png') }}" class="logo-login" alt="logo"/>
            </div>
            <div class="col-md-4">
                <h2>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</h2>
                {% if app.session is not empty %}
                    {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
                    {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>{% endif %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
