<div class="col-lg-12">
    <div class="row">
        <section class="panel panel-default" id="tasks">
            <div class="panel-heading">
                <h2><i class="fa fa-tasks"></i><strong>Tasks</strong></h2>
                <div class="panel-actions">
                    <a href="#" class="btn-minimize wminimize"><i class="fa fa-chevron-up"></i></a>
                </div>
            </div>
            <div class="panel-body progress-panel">
                <table class="table bootstrap-datatable countries personal-task">
                    <thead>
                    <tr>
                        <th>Start date</th>
                        <th>End date</th>
                        <th>Task title</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for task in app.user.tasks %}
                        <tr>
                            <td> {{ task.createdAt|date("F d, Y") }} </td>
                            <td> {{ task.finishDate|date("F d, Y") }} </td>
                            <td>
                                {{ task.title }}
                            </td>
                            <td>
                                <div class="progress thin">
                                    {#<span class="task-status-num">{{ task.status }}</span>#}
                                    <span data-tooltip="{{ task.status }}%">
                                        <div class="progress-bar {% if task.status < 30  %}progress-bar-danger{% elseif task.status < 60 %}progress-bar-warning {% else %}progress-bar-success {% endif %} tooltips"  data-placement="top" data-toggle="tooltip" data-original-title="{{ task.status }}" role="progressbar" aria-valuenow="{{ task.status }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ task.status }}%">
                                        </div>
                                    </span>
                                </div>

                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>