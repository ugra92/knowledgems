{% extends ':layout:master.html.twig' %}
{% block customStylesheet %}
{% endblock %}
{% block content %}
    <section id="dashboard">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-code"></i> Code</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-code"></i><a href="{{ path('article-add') }}">Code</a></li>
            </ol>
        </div>
        <div class="col-md-12">
            <div class="col-md-2">
                <div class="row">
                    <button class="btn btn-success btn-code " id="dugme">Run</button>
                    <button class="btn btn-primary btn-code " id="add-button">Save</button>
                </div>
            </div>
            <div class="form-group col-md-4">
                <div class="row">
                    <input type="text" class="form-control" placeholder="Code title..." id="codeHeading"/>
                </div>
            </div>
            <div class="form-group col-md-4 col-md-offset-1">
                <div class="row">
                    <input type="text" class="form-control" placeholder="Code tags..." id="codeTags" name="codeTags"/>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-12" id="code-container">
                <div class="col-md-12">
                    <h3>Css</h3>
                    <textarea name="code-css" class="code-css code-snippet" id="code-css" rows="15" style="width: 100%"></textarea>
                </div>
                <div class="col-md-12">
                    <h3>HTML</h3>
                    <textarea name="code-html" class="code-html code-snippet" id="code-html" rows="15" style="width: 100%"></textarea>
                </div>
                <div class="col-md-12">
                    <h3>JavaScript</h3>
                    <textarea name="code-js" class="code-js code-snippet" id="code-js" rows="15" style="width: 100%"></textarea>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <ul class="responsive-menu">
                <li>
                    <div class="info-box blue-bg" data-resolution="480">
                        <i class="fa fa-mobile"></i>
                        <div class="count">(480 and up)</div>
                    </div>
                </li>
                <li>
                    <div class="info-box brown-bg" data-resolution="768">
                        <i class="fa fa-tablet"></i>
                        <div class="count">(768px and up)</div>
                    </div>
                </li>
                <li>
                    <div class="info-box dark-bg" data-resolution="992">
                        <i class="fa fa-tablet tablet-landscape" ></i>
                        <div class="count">(992px and up)</div>
                    </div>
                </li>
                <li>
                    <div class="info-box green-bg" data-resolution="1200">
                        <i class="fa fa-laptop"></i>
                        <div class="count">(1200px and up)</div>
                    </div>
                </li>
                <li>
                    <div class="info-box green-bg" data-resolution="full">
                        <i class="fa fa-desktop"></i>
                        <div class="count">(full width)</div>
                    </div>

                </li>
            </ul>
            <div id="iframe-holder">
                <iframe src=""  frameborder="0" id="view">
                    <div id="script"></div>
                </iframe>
            </div>
        </div>
    </section>
{% endblock %}
