{% extends ':layout:master.html.twig' %}
{% block customStylesheet %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        .date{
            position: relative;
            bottom: 0px;
            right: 10px;
        }
        .collection-header{
            font-size: 18px;
            color: #3A4450;
            position: relative;
            margin-top: 10px;
            display: block;
        }
        .acceptedAnsw{
            font-size: 18px;
            color: #4CAF50;
        }
        .profile-image{
            border:1px solid #ddd;
        }
        .collection .collection-item.avatar{
            min-height: 100px;
        }
        #modal1{
            min-height: 100%;
        }
        .modal-content{
            box-shadow: none;
        }
        .modal-footer{
            box-shadow: none;
        }
        .modal-close{
            position: fixed;
            top:30px;
            right: 30px;
        }
        .canvasHolder.canvasHidden{
            right: -100%;
            position: absolute;
            z-index: 2;
            background: #FCFCFC;
        }
        .canvasHolder{
            right: 0;
        }
        body{
            overflow-x: hidden;
        }
    </style>
{% endblock %}

