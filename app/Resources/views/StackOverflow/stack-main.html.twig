{% block customScripts %}
    <script src="{{ asset('Dashboard/js/Chart.min.js') }}"></script>
    <script src="{{ asset('Dashboard/js/Chart.Bar.js') }}"></script>
    <script src="{{ asset('Stack/stackApi.js') }}"></script>
    <script>

        $(document).ready(function(){
            // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
        });
        $('.stackReq').on('click',function(){
            var searchStr = $('#searchStack').val();
            $.get('http://api.stackexchange.com/2.2/search?order=desc&sort=relevance&intitle='+searchStr+'&site=stackoverflow', function(data){
                renderResponseList(data.items);
            });
        });
    </script>

